<%- include('partials/head') %>

<body class="bg-gray-900 min-h-screen">
  <div class="container mx-auto px-4 py-8">
    <div class="max-w-2xl mx-auto">
      <!-- Logo and Title -->
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-white mb-4">ConnectNow</h1>
        <p class="text-gray-400 text-lg">Secure video meetings for everyone</p>
      </div>

      <!-- Action Cards -->
      <div class="grid md:grid-cols-2 gap-6 mb-12">
        <!-- New Meeting Card -->
        <div class="bg-gray-800 rounded-xl p-6 shadow-lg hover:shadow-xl transition-all">
          <div class="flex items-center justify-between mb-4">
            <h2 class="text-xl font-semibold text-white">New Meeting</h2>
            <div class="w-12 h-12 bg-blue-500 rounded-full flex items-center justify-center">
              <i class="fas fa-video text-white text-xl"></i>
            </div>
          </div>
          <p class="text-gray-400 mb-6">Create a new meeting and invite others</p>
          <a href="/new-meeting" class="block w-full bg-blue-500 hover:bg-blue-600 text-white font-medium py-3 px-4 rounded-lg text-center transition-colors">
            Start Meeting
          </a>
        </div>

        <!-- Join Meeting Card -->
        <div class="bg-gray-800 rounded-xl p-6 shadow-lg hover:shadow-xl transition-all">
          <div class="flex items-center justify-between mb-4">
            <h2 class="text-xl font-semibold text-white">Join Meeting</h2>
            <div class="w-12 h-12 bg-green-500 rounded-full flex items-center justify-center">
              <i class="fas fa-sign-in-alt text-white text-xl"></i>
            </div>
          </div>
          <p class="text-gray-400 mb-6">Join an existing meeting with a code</p>
          <form action="/join" method="POST" class="space-y-4">
            <div class="relative">
              <input 
                type="text" 
                name="code" 
                placeholder="Enter meeting code" 
                class="w-full bg-gray-700 text-white placeholder-gray-400 py-3 px-4 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                required
              >
            </div>
            <button type="submit" class="w-full bg-green-500 hover:bg-green-600 text-white font-medium py-3 px-4 rounded-lg transition-colors">
              Join Meeting
            </button>
          </form>
        </div>
      </div>

      <!-- Features Section -->
      <div class="grid md:grid-cols-3 gap-6 text-center">
        <div class="p-4">
          <div class="w-12 h-12 bg-blue-500 rounded-full flex items-center justify-center mx-auto mb-4">
            <i class="fas fa-shield-alt text-white text-xl"></i>
          </div>
          <h3 class="text-white font-medium mb-2">Secure Meetings</h3>
          <p class="text-gray-400">End-to-end encrypted video calls</p>
        </div>
        <div class="p-4">
          <div class="w-12 h-12 bg-purple-500 rounded-full flex items-center justify-center mx-auto mb-4">
            <i class="fas fa-clock text-white text-xl"></i>
          </div>
          <h3 class="text-white font-medium mb-2">No Time Limits</h3>
          <p class="text-gray-400">Host meetings for as long as you need</p>
        </div>
        <div class="p-4">
          <div class="w-12 h-12 bg-green-500 rounded-full flex items-center justify-center mx-auto mb-4">
            <i class="fas fa-users text-white text-xl"></i>
          </div>
          <h3 class="text-white font-medium mb-2">Multiple Participants</h3>
          <p class="text-gray-400">Connect with your team seamlessly</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Error Message Container -->
  <div id="error-container" class="fixed top-4 right-4 z-50"></div>

  <script>
    // Show error message if present in URL params
    const urlParams = new URLSearchParams(window.location.search);
    const error = urlParams.get('error');
    if (error) {
      const errorDiv = document.createElement('div');
      errorDiv.className = 'error-message';
      errorDiv.textContent = decodeURIComponent(error);
      document.getElementById('error-container').appendChild(errorDiv);
      setTimeout(() => errorDiv.remove(), 5000);
    }
  </script>
</body>
</html>